{
    "schemaVersion": 1,
    "id": "nexus-client",
    "version": "1.0.0",
    "name": "Nexus Client",
    "description": "A modern, customizable Minecraft client with advanced features and sleek design.",
    "authors": [
        "Engine AI"
    ],
    "contact": {
        "homepage": "https://nexusclient.dev",
        "sources": "https://github.com/nexusclient/NexusClient"
    },
    "license": "CC0-1.0",
    "icon": "assets/nexus-client/icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            {
                "adapter": "kotlin",
                "value": "com.nexusclient.NexusClient"
            }
        ],
        "fabric-datagen": [
            "com.nexusclient.NexusClientDataGenerator"
        ]
    },
    "mixins": [
        "nexus-client.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.16.14",
        "minecraft": "~1.21.4",
        "java": ">=21",
        "fabric-api": "*",
        "fabric-language-kotlin": ">=1.10.8+kotlin.1.9.0"
    },
    "suggests": {
        "another-mod": "*"
    }
}